<UserControl x:Class="ManagementCoach.Views.UserControls.BindablePasswordBoxUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ManagementCoach.Views.UserControls"
             mc:Ignorable="d" 
             Background="White"
             
             d:DesignHeight="48" d:DesignWidth="315">
    <PasswordBox x:Name="pwdPassword" 
                 BorderThickness="0" 
                 Background="{x:Null}"
                 
                  materialDesign:HintAssist.Hint="Password"
                materialDesign:TextFieldAssist.HasClearButton="True"
                Padding="0 10"
                Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
                 VerticalContentAlignment="Center" 
                 Height="48"  
                 VerticalAlignment="Center" Width="315"  FontSize="16"/>
</UserControl>
