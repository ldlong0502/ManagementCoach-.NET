<Window x:Class="ManagementCoach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementCoach" xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="800" Width="1500" WindowState="Normal" Closed="Window_Closed">
    <Grid>
        <MenuItem Width="120" Height="35" Header="Action" HorizontalAlignment="Right" Margin="0 0 20 0" Style="{StaticResource MenuItem_With_Dropdown}">
            <MenuItem.Icon >
                <fa:FontAwesome Icon="Gear" VerticalAlignment="Center" Foreground="White" FontSize="20"></fa:FontAwesome>
            </MenuItem.Icon>
            <MenuItem Header="{Binding Title}" Width="100" Height="35" Style="{StaticResource Services_Sub_MenuItem}">
                <MenuItem.Icon>
                    <fa:FontAwesome Icon="Plus" Foreground="White" FontSize="20"></fa:FontAwesome>
                </MenuItem.Icon>
            </MenuItem>

        </MenuItem>

    </Grid>
</Window>
